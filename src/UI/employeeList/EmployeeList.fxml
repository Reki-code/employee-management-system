<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1024.0" stylesheets="@EmployeeList.css"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="UI.employeeList.EmployeeListController">
    <JFXTreeTableView fx:id="editableTreeTableView" prefHeight="696.0" prefWidth="1000.0" AnchorPane.bottomAnchor="20.0"
                      AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <columns>
            <JFXTreeTableColumn fx:id="idColumn" maxWidth="-1.0" minWidth="111.0" text="职工号"/>
            <JFXTreeTableColumn fx:id="nameColumn" maxWidth="-1.0" minWidth="111.0" text="姓名"/>
            <JFXTreeTableColumn fx:id="genderColumn" maxWidth="-1.0" minWidth="111.0" text="性别"/>
            <JFXTreeTableColumn fx:id="ageColumn" maxWidth="-1.0" minWidth="111.0" text="年龄"/>
            <JFXTreeTableColumn fx:id="phoneNumberColumn" maxWidth="-1.0" minWidth="111.0" text="电话"/>
            <JFXTreeTableColumn fx:id="residenceColumn" maxWidth="-1.0" minWidth="111.0" text="住址"/>
            <JFXTreeTableColumn fx:id="educationColumn" maxWidth="-1.0" minWidth="111.0" text="学历"/>
            <JFXTreeTableColumn fx:id="wageColumn" maxWidth="-1.0" minWidth="111.0" text="工资"/>
            <JFXTreeTableColumn fx:id="entryDateColumn" maxWidth="-1.0" minWidth="111.0" text="入职日期"/>
        </columns>
    </JFXTreeTableView>
    <HBox alignment="CENTER" spacing="5.0">
        <Label prefHeight="64.0" prefWidth="240.0" styleClass="title" text="职工信息">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Label>
        <Label fx:id="editableTreeTableViewCount" styleClass="title"/>
        <JFXTextField fx:id="searchField" prefHeight="34.0" prefWidth="226.0" promptText="搜索..."/>
    </HBox>
</AnchorPane>
