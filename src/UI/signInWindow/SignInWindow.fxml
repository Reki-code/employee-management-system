                  prefHeight="46.0" prefWidth="283.0" promptText="用户名" styleClass="inputFiled"/>
    <JFXPasswordField fx:id="loginPassword" focusColor="#0076ff" labelFloat="true" layoutX="141.0" layoutY="336.0"
                      prefHeight="46.0" prefWidth="283.0" promptText="密码" styleClass="inputFiled"/>
