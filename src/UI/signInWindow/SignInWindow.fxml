        <Label alignment="CENTER" layoutX="50.0" layoutY="101.0" prefHeight="92.0" prefWidth="466.0" styleClass="title"
               text="欢迎使用"/>
        <Label alignment="CENTER" layoutX="50.0" layoutY="137.0" prefHeight="170.0" prefWidth="466.0" styleClass="title"
               text="职工信息管理系统"/>
    </AnchorPane>
</AnchorPane>
