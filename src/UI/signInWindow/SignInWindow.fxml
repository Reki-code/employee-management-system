<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" onKeyPressed="#onPress" prefHeight="655.0"
            prefWidth="1130.0" style="-fx-background-color: rgba(255,255,255,0.85);" stylesheets="@SignIn.css"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="UI.signInWindow.SignInWindowController">
    <Label alignment="CENTER" layoutX="218.0" layoutY="167.0" prefHeight="46.0" prefWidth="129.0" text="登录">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
