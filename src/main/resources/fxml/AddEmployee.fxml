<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" prefHeight="692.0" prefWidth="1066.0"
           stylesheets="@../styles/AddEmployee.css" xmlns="http://javafx.com/javafx/11.0.1"
           fx:controller="main.java.ui.AddEmployeeController">
    <AnchorPane prefHeight="511.0" prefWidth="1005.0">
        <VBox alignment="CENTER" layoutX="109.0" layoutY="41.0" prefHeight="475.0" prefWidth="302.0">
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" text="职工号" textAlignment="RIGHT"/>
                <JFXTextField fx:id="id">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </JFXTextField>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" text="姓名" textAlignment="RIGHT"/>
                <JFXTextField fx:id="name">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </JFXTextField>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" text="性别" textAlignment="RIGHT"/>
                <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="239.0">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets left="10.0" right="20.0"/>
                    </HBox.margin>
                    <JFXRadioButton fx:id="male" text="男">
                        <HBox.margin>
                            <Insets right="20.0"/>
                        </HBox.margin>
                    </JFXRadioButton>
                    <JFXRadioButton fx:id="female" text="女"/>
                </HBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" text="年龄" textAlignment="RIGHT"/>
                <JFXTextField fx:id="age">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </JFXTextField>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" text="电话" textAlignment="RIGHT"/>
                <JFXTextField fx:id="phoneNumber">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </JFXTextField>
            </HBox>
        </VBox>
        <VBox alignment="CENTER" layoutX="420.0" layoutY="47.0" prefHeight="377.0" prefWidth="302.0">
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" text="工资" textAlignment="RIGHT"/>
                <JFXTextField fx:id="wage">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </JFXTextField>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" text="学历" textAlignment="RIGHT"/>
                <JFXComboBox fx:id="education" prefHeight="30.0" prefWidth="137.0">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </JFXComboBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" text="住址" textAlignment="RIGHT"/>
                <JFXTextField fx:id="residence">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </JFXTextField>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="318.0">
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" text="入职时间" textAlignment="RIGHT"/>
                <JFXDatePicker fx:id="entryDate" defaultColor="#006f8f" prefHeight="30.0"
                               prefWidth="152.0">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </JFXDatePicker>
            </HBox>
        </VBox>
        <JFXButton fx:id="addButton" layoutX="420.0" layoutY="531.0" onAction="#submit" prefHeight="43.0"
                   prefWidth="109.0" text="添加"/>
    </AnchorPane>
    <JFXSpinner fx:id="loading" prefHeight="77.0" prefWidth="79.0" visible="false"/>
</StackPane>
